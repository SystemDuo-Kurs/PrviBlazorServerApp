            <MudNavLink Href="/counter">Counter</MudNavLink>
            <MudNavLink Href="/fetchdata">Fetch data</MudNavLink>
            <MudNavGroup Title="Settings" Expanded="true">
                <MudNavLink Href="/nasa">Nasa</MudNavLink>
                <MudNavLink Href="/nasa">Nasa drugi put :D</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/about">About</MudNavLink>
        </MudNavMenu>
    </MudPaper>
